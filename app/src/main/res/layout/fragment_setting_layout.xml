<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:background="@color/hint_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_background"
            android:orientation="vertical"
            android:paddingBottom="25dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/profile_pic_dummy"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"/>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sentry_location_text_size"
                android:textStyle="bold"
                app:ttfName="SourceSansPro-Regular"/>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/label_text_size_14"
                app:ttfName="SourceSansPro-Regular"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/change_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="40dp"
            android:background="@color/white">

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/change_avatar"
                style="@style/text_style"
                android:text="Change Avatar"
                app:ttfName="SourceSansPro-Regular" />

            <View
                android:id="@+id/view_avatar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/change_avatar"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/change_password"
                style="@style/text_style"
                android:layout_below="@+id/view_avatar"
                android:text="Change Password"
                app:ttfName="SourceSansPro-Regular"/>

            <View
                android:id="@+id/view_notification"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/change_password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>


       <!--     <RelativeLayout
                android:id="@+id/layout_notification"
                android:layout_width="match_parent"
                android:layout_below="@+id/view_notification"
                android:layout_height="wrap_content">

                <com.appdev360.jobsitesentry.widget.TextViewCustom
                    android:id="@+id/txt_notification"
                    style="@style/text_style"
                    android:text="@string/notification"
                    app:ttfName="SourceSansPro-Regular"/>


                <ImageView
                    android:id="@+id/notification_checked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignRight="@+id/txt_notification"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/checked"/>


            </RelativeLayout>-->


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view_notification"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>


            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/finger_print_id"
                style="@style/text_style"
                android:layout_below="@+id/view_notification"
                android:text="@string/fingerprint"
                app:ttfName="SourceSansPro-Regular" />

            <ImageView
                android:id="@+id/checked"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view_notification"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/checked"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/link_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_profile_layout"
            android:layout_marginTop="40dp"
            android:background="@color/white">

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/about_us"
                style="@style/text_style"
                android:text="About Us"
                app:ttfName="SourceSansPro-Regular"/>

            <View
                android:id="@+id/view_about_us"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/about_us"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/privacy_policy"
                style="@style/text_style"
                android:layout_below="@+id/view_about_us"
                android:text="Privacy Policy"

                app:ttfName="SourceSansPro-Regular"/>

            <View
                android:id="@+id/view_privacy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/privacy_policy"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/terms_of_service"
                style="@style/text_style"
                android:layout_below="@+id/view_privacy"
                android:text="Terms of Service"
                app:ttfName="SourceSansPro-Regular"/>

            <View
                android:id="@+id/view_terms_of_service"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/terms_of_service"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/feedback"
                style="@style/text_style"
                android:layout_below="@+id/view_terms_of_service"
                android:text="Feedback"
                app:ttfName="SourceSansPro-Regular"/>

            <View
                android:id="@+id/view_build"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/feedback"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color">

            </View>


            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/build_info"
                style="@style/text_style"
                android:layout_below="@+id/view_build"
                android:text="Build Info : v1.1 (3)"
                app:ttfName="SourceSansPro-Regular"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link_layout"
            android:layout_marginTop="40dp"
            android:background="@color/white">

            <com.appdev360.jobsitesentry.widget.TextViewCustom
                android:id="@+id/logout"
                style="@style/text_style"
                android:text="Logout"
                app:ttfName="SourceSansPro-Regular"/>


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>